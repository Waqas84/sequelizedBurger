<div class="container">
   <div class="row">
      <div class="col-xs-6">
         <ul id="list1">
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
               <span>
                  {{this.burger_name}}
                  <form action="/{{this.id}}?_method=PUT" method="POST">
                     <button class="btn btn-primary" type="submit" >Devour it</button>
                  </form>
               </span>
            </li>
            {{/unless}}
            {{/each}}
         </ul>
      </div>
      <div class="col-xs-6">
         <ol id="list2">
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
               {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
         </ol>
      </div>
   </div>
   <hr>
   <div class="container">
      <div class="row">
         <div id="new-style">
            <h1>Add Your Own Style</h1>
            <form class="create-update-form" action="/" method="POST">
               <div class="form-group">
                  <label for="ca"></label>
                  <input type="text" class="form-control" name="name" placeholder="Your Style">
               </div>
               <button type="submit" class="btn btn-primary">Add it
            </form>
         </div>
      </div>
   </div>
</div>
</div>